<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>
{{#if stories}}
      <table>
        <thead>
          <tr>
              <th>Title</th>
              <th>Date</th>
              <th>Status</th>
          </tr>
        </thead>

        <tbody>
        {{#each stories}}
          <tr>
            <td><a href="/stories/{{_id}}"></a>{{title}}</td>
            <td>{{formatDate createdAt 'Do MMMM YYYY'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
          </tr>
          {{/each}}
          
        </tbody>
      </table>
            
{{else}}
    <p>you have not create any stories</p> 
{{/if}}